<Window x:Class="Piano_Player.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Piano_Player"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="Piano Player - Error" Height="550" Width="550">
    <Grid Background="#eeeeee">
        <TextBox x:Name="edit_text" x:FieldModifier="public"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                 Margin="0,0,0,0" Padding="10,10,10,10"
                 HorizontalScrollBarVisibility="Auto"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap"
                 IsReadOnly="True"
                 Text="[Error Text]"/>
    </Grid>
</Window>
